<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.controllers.ProfileController" prefHeight="750.0" prefWidth="430.0">
   
   <!-- Top Section for Title -->
   <top>
      <Pane prefHeight="200.0" prefWidth="430.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="30.0" layoutY="50.0" prefHeight="100.0" prefWidth="370.0" 
                   style="-fx-text-fill: #ffffff; -fx-font-family: 'Arial Rounded MT Bold'; -fx-font-size: 32.0;" 
                   text="Profile" wrapText="true" textAlignment="CENTER" />
         </children>
      </Pane>
   </top>

   <!-- Center Section for User Info -->
   <center>
      <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <!-- User Profile Picture -->
         <ImageView fx:id="profilePic" fitHeight="100.0" fitWidth="100.0" preserveRatio="true" />
         
         <!-- User Name -->
         <Label fx:id="usernameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="John Doe" />
         
         <!-- Progress Section -->
         <ProgressBar fx:id="progressBar" prefWidth="300.0" progress="0.75" />
         <Label fx:id="progressLabel" style="-fx-font-size: 16px;" text="Progress: 75%" />
         
         <!-- Level and Streak -->
         <HBox spacing="15.0">
            <VBox>
               <Label text="Level:" />
               <Label fx:id="levelLabel" text="2" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            </VBox>
            <VBox>
               <Label text="Streak:" />
               <Label fx:id="streakLabel" text="5" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            </VBox>
         </HBox>
         
         <!-- XP Section -->
         <ProgressBar fx:id="xpProgressBar" prefWidth="300.0" progress="0.575" />
         <Label fx:id="xpLabel" text="575/1000 XP" style="-fx-font-size: 16px;" />
         
         <!-- Log Out Button -->
         <Button fx:id="logoutButton" text="Log Out" onAction="#handleLogout" prefWidth="150.0" styleClass="logout-button" />
      </VBox>
   </center>

   <!-- Bottom Navigation Bar -->
   <bottom>
      <HBox alignment="CENTER" prefHeight="71.0" prefWidth="430.0" spacing="20" styleClass="bottom-bar">
         <!-- Home Button -->
         <VBox alignment="CENTER" onMouseClicked="#handleHome" spacing="5" styleClass="nav-button">
            <Label styleClass="icon" text="🏠" />
            <Label styleClass="nav-text" text="Home" />
         </VBox>

         <!-- Ranking Button -->
         <VBox alignment="CENTER" onMouseClicked="#handleRanking" spacing="5" styleClass="nav-button">
            <Label styleClass="icon" text="🏆" />
            <Label styleClass="nav-text" text="Ranking" />
         </VBox>

         <!-- Flashcards Button -->
         <VBox alignment="CENTER" onMouseClicked="#handleFlashcards" spacing="5" styleClass="nav-button">
            <Label styleClass="icon" text="📘" />
            <Label styleClass="nav-text" text="Flashcards" />
         </VBox>

         <!-- Profile Button -->
         <VBox alignment="CENTER" onMouseClicked="#handleProfile" spacing="5" styleClass="nav-button">
            <Label styleClass="icon" text="👤" />
            <Label styleClass="nav-text" text="Profile" />
         </VBox>
      </HBox>
   </bottom>

   <!-- Add stylesheets -->
   <stylesheets>
      <URL value="@../styles.css" />
      <URL value="@styles.css" />
   </stylesheets>
</BorderPane>
